# Backend Environment Configuration
# Copy this file to .env and update the values

# ===================
# Server Configuration
# ===================
NODE_ENV=development
PORT=3001

# ===================
# Database Configuration
# ===================
# MongoDB connection string
# For local development: mongodb://localhost:27017/fullstack_app
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/fullstack_app
MONGODB_URI=mongodb://localhost:27017/fullstack_app

# ===================
# JWT Configuration
# ===================
# Secret key for signing access tokens (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
# Access token expiration time
JWT_EXPIRES_IN=7d

# Secret key for signing refresh tokens
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-minimum-32-chars
# Refresh token expiration time
JWT_REFRESH_EXPIRES_IN=30d

# ===================
# CORS Configuration
# ===================
# Frontend URL for CORS (use comma-separated values for multiple origins)
CORS_ORIGIN=http://localhost:3000

# ===================
# Rate Limiting
# ===================
# Window duration in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===================
# Security
# ===================
# Bcrypt salt rounds (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=12

# ===================
# Email Configuration (Optional)
# ===================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# EMAIL_FROM=noreply@example.com
